<h2>Listing people</h2>

<%= form_tag root_path, method: :get do %>
  <%= search_field_tag :q, params[:q], placeholder: 'Search people' %>
  <%= submit_tag 'Search' %>
  <%= link_to 'New Person', new_person_path, name: nil %>
<% end %>

<br>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Location</th>
    <th>Age</th>
    <th>Married</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <%= render @people %>
</table>

<%= paginate @people %>
